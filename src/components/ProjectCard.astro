---
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<div class="project-card">
    <h3>{title}</h3>
    <p class="project-description">{description}</p>
    <a href="projects/project-one/index.html" class="btn-small">View â†’</a>
</div>

<style>
    .project-card {
        background: #fff;
        border-radius: 0.75rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        display: flex;
        align-items: start;
        flex-direction: column;
        flex: 1;
    }

    .project-card p {
        flex-grow: 1;
        font-size: 0.95rem;
        line-height: 1.4;
        margin-bottom: 1rem;
    }

    .project-description {
        white-space: pre-line;
    }

    /* Button */
    .btn-small {
        align-self: flex-end;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        text-decoration: none;
        border: 1px solid #333;
        border-radius: 0.25rem;
        transition:
            0.2s,
            color 0.2s;
    }

    .btn-small:hover {
        background: #333;
        color: #fff;
    }
</style>
